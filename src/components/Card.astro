---
interface Props {
	title: string;
	author: string;
	description: string;
	tags: string;
	image: string;
}

const { author,description, tags,image, title } = Astro.props;
---

<li class="link-card">
	<a>
		<img src={image} alt={title} />
		<div class="info">
			<h2>
				{title}
			</h2>
			<h3>{author}</h3>
			<p>
				{description}
			</p>
			<div class="tags">
				{
					tags.split('|').map((tag) => (
						<p class="tag">{tag}</p>
					))
				}
			</div>
		</div>
	</a>
</li>
<style>
	img {
		max-width: 300px;
		width: 100%;
		height: auto;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		gap: 10px;
	}

	.tag {
		padding: 10px;
		background: #33384253;
		color: aliceblue;
	}

	.tag:hover {
		background: #333842;
		color: #ddd;
	}
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
